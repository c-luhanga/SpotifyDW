@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">SpotifyDW</h1>
    <p class="lead">Spotify Data Warehouse - Analytics & Reports</p>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <h2>Available Reports</h2>
        <div class="list-group mt-3">
            <a href="/Reports/TopArtistsByYear" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Top Artists by Year</h5>
                </div>
                <p class="mb-1">View the top artists for a specific year based on average track popularity.</p>
            </a>
            <a href="/Reports/TopTracksForArtist" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Top Tracks for an Artist</h5>
                </div>
                <p class="mb-1">Search for an artist and view their most popular tracks.</p>
            </a>
            <a href="/Reports/PopularityTrendByYear" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Popularity Trend by Year</h5>
                </div>
                <p class="mb-1">Analyze average track popularity trends over time.</p>
            </a>
            <a href="/Reports/CompareTwoArtists" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Compare Two Artists</h5>
                </div>
                <p class="mb-1">Compare statistics and audio features between two artists.</p>
            </a>
            <a href="/Reports/AudioProfile" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Audio Profile of an Artist</h5>
                </div>
                <p class="mb-1">Explore the audio characteristics and features of an artist's music.</p>
            </a>
            <a href="/Reports/CustomReportBuilder" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Custom Report Builder</h5>
                    <span class="badge bg-primary">Advanced</span>
                </div>
                <p class="mb-1">Build your own custom report by selecting a measure, grouping, and filters.</p>
            </a>
        </div>
    </div>
</div>
