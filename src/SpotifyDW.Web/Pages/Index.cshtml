@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="bg-light p-5 rounded-3 mb-4">
    <div class="container-fluid py-5">
        <h1 class="display-4 fw-bold">SpotifyDW – Spotify Analytics Warehouse</h1>
        <p class="col-md-8 fs-5">
            Explore track popularity trends, compare artists, and analyze audio profiles across thousands of songs in our comprehensive Spotify data warehouse.
        </p>
        <a class="btn btn-primary btn-lg" asp-page="/Reports/Index" role="button">View Reports Dashboard</a>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">📊 Popularity Analytics</h5>
                <p class="card-text">Discover trending artists and tracks over time with detailed popularity metrics.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">🎵 Audio Features</h5>
                <p class="card-text">Dive deep into audio characteristics like energy, danceability, and valence.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">⚡ Custom Reports</h5>
                <p class="card-text">Build your own queries and insights with our flexible report builder.</p>
            </div>
        </div>
    </div>
</div>
