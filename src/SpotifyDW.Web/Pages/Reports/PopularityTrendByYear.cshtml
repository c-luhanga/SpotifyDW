@page
@model SpotifyDW.Web.Pages.Reports.PopularityTrendByYearModel
@{
    ViewData["Title"] = "Popularity Trend by Year";
}

<h1>@ViewData["Title"]</h1>
<p>Analyze average track popularity trends over time.</p>

<div class="card mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="minYear" class="form-label">Min Year (optional)</label>
                    <input type="number" class="form-control" id="minYear" name="minYear" 
                           value="@Model.MinYear" placeholder="e.g., 2000" />
                </div>
                <div class="col-md-4">
                    <label for="maxYear" class="form-label">Max Year (optional)</label>
                    <input type="number" class="form-control" id="maxYear" name="maxYear" 
                           value="@Model.MaxYear" placeholder="e.g., 2023" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Show Trend</button>
                </div>
            </div>
            <small class="form-text text-muted">Leave both blank to see all years</small>
        </form>
    </div>
</div>

@if (Model.HasSearched)
{
    @if (Model.Results.Any())
    {
        var rangeText = (Model.MinYear, Model.MaxYear) switch
        {
            (null, null) => "All Years",
            (not null, null) => $"{Model.MinYear} onwards",
            (null, not null) => $"Up to {Model.MaxYear}",
            (not null, not null) => $"{Model.MinYear} to {Model.MaxYear}"
        };
        
        var latestYear = Model.Results.Max(r => r.Year);
        
        <h3>Popularity Trend: @rangeText</h3>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Year</th>
                        <th class="text-end">Avg Popularity</th>
                        <th class="text-end">Track Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.Results)
                    {
                        var rowClass = result.Year == latestYear ? "table-info" : "";
                        <tr class="@rowClass">
                            <td>
                                @result.Year
                                @if (result.Year == latestYear)
                                {
                                    <span class="badge bg-primary">Latest</span>
                                }
                            </td>
                            <td class="text-end">@result.AvgPopularity.ToString("F2")</td>
                            <td class="text-end">@result.TrackCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <p class="text-muted">Total: @Model.Results.Count year(s)</p>
    }
    else
    {
        <div class="alert alert-info">
            No data found for the specified year range.
        </div>
    }
}
