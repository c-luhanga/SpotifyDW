@page
@model SpotifyDW.Web.Pages.Reports.CustomReportBuilderModel
@{
    ViewData["Title"] = "Custom Report Builder";
}

<h1>@ViewData["Title"]</h1>
<p>Build your own custom report by selecting a measure, grouping, and filters.</p>

<div class="card mb-4">
    <div class="card-header bg-dark text-white">
        <h5>Report Configuration</h5>
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="measure" class="form-label">Measure</label>
                    <select class="form-select" id="measure" name="measure" asp-for="Measure" asp-items="Model.MeasureOptions">
                    </select>
                    <small class="form-text text-muted">What metric to analyze</small>
                </div>
                <div class="col-md-6">
                    <label for="grouping" class="form-label">Group By</label>
                    <select class="form-select" id="grouping" name="grouping" asp-for="Grouping" asp-items="Model.GroupingOptions">
                    </select>
                    <small class="form-text text-muted">How to group the results</small>
                </div>
            </div>

            <hr class="my-4" />

            <h6>Filters (Optional)</h6>
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="minYear" class="form-label">Min Year</label>
                    <input type="number" class="form-control" id="minYear" name="minYear" 
                           value="@Model.MinYear" placeholder="2000" />
                </div>
                <div class="col-md-3">
                    <label for="maxYear" class="form-label">Max Year</label>
                    <input type="number" class="form-control" id="maxYear" name="maxYear" 
                           value="@Model.MaxYear" placeholder="2023" />
                </div>
                <div class="col-md-3">
                    <label for="minPopularity" class="form-label">Min Popularity</label>
                    <input type="number" class="form-control" id="minPopularity" name="minPopularity" 
                           value="@Model.MinPopularity" placeholder="50" min="0" max="100" />
                </div>
                <div class="col-md-3">
                    <label for="artistPattern" class="form-label">Artist Pattern</label>
                    <input type="text" class="form-control" id="artistPattern" name="artistPattern" 
                           value="@Model.ArtistPattern" placeholder="e.g., Taylor" />
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary btn-lg">Generate Report</button>
            </div>
        </form>
    </div>
</div>

@if (Model.HasSearched)
{
    @if (Model.Results.Any())
    {
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Results: Average @Model.GetMeasureName() by @Model.GetGroupingName()</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                @if (Model.Grouping == SpotifyDW.Web.Services.Reports.CustomReportBuilderService.GroupingType.ArtistYear)
                                {
                                    <th>Artist</th>
                                    <th>Year</th>
                                }
                                else
                                {
                                    <th>Group</th>
                                }
                                <th class="text-end">Avg @Model.GetMeasureName()</th>
                                <th class="text-end">Track Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.Results)
                            {
                                <tr>
                                    @if (Model.Grouping == SpotifyDW.Web.Services.Reports.CustomReportBuilderService.GroupingType.ArtistYear)
                                    {
                                        <td>@result.GroupValue1</td>
                                        <td>@result.GroupValue2</td>
                                    }
                                    else
                                    {
                                        <td>@result.GroupValue1</td>
                                    }
                                    <td class="text-end">
                                        @if (Model.Measure == SpotifyDW.Web.Services.Reports.CustomReportBuilderService.MeasureType.Tempo)
                                        {
                                            @result.AvgValue.ToString("F1")
                                        }
                                        else
                                        {
                                            @result.AvgValue.ToString("F2")
                                        }
                                    </td>
                                    <td class="text-end">@result.TrackCount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <p class="text-muted mt-3">Total groups: @Model.Results.Count</p>
            </div>
        </div>

        @if (Model.MinYear.HasValue || Model.MaxYear.HasValue || Model.MinPopularity.HasValue || !string.IsNullOrWhiteSpace(Model.ArtistPattern))
        {
            <div class="alert alert-info mt-3">
                <strong>Active Filters:</strong>
                @if (Model.MinYear.HasValue)
                {
                    <span class="badge bg-secondary">Min Year: @Model.MinYear</span>
                }
                @if (Model.MaxYear.HasValue)
                {
                    <span class="badge bg-secondary">Max Year: @Model.MaxYear</span>
                }
                @if (Model.MinPopularity.HasValue)
                {
                    <span class="badge bg-secondary">Min Popularity: @Model.MinPopularity</span>
                }
                @if (!string.IsNullOrWhiteSpace(Model.ArtistPattern))
                {
                    <span class="badge bg-secondary">Artist: "@Model.ArtistPattern"</span>
                }
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">
            No data found matching your criteria. Try adjusting your filters.
        </div>
    }
}
